<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Camera Preview with Overlay -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.camera.view.PreviewView
            android:id="@+id/viewFinder"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.example.signtranslator.OverlayView
            android:id="@+id/overlayView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <!-- Result Display Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#F5F5F5"
        android:elevation="4dp">

        <!-- Current Letter Detection -->
        <TextView
            android:id="@+id/tvCurrentLetter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detected: -"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="8dp"
            android:elevation="2dp"
            android:fontFamily="monospace" />

        <!-- Confidence Score -->
        <TextView
            android:id="@+id/tvConfidence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confidence: -"
            android:textSize="16sp"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <!-- Sentence Builder -->
        <TextView
            android:id="@+id/tvSentence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sentence: "
            android:textSize="18sp"
            android:textColor="#333333"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:minHeight="60dp"
            android:elevation="2dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="sherif" />

        <!-- Control Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <!-- Auto-Add Switch -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Auto-Add Mode"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />

                <Switch
                    android:id="@+id/switchAutoAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false" />

            </LinearLayout>

            <!-- Control Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnAddLetter"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Add Letter"
                    android:layout_marginEnd="4dp"
                    android:backgroundTint="#4CAF50"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnAddSpace"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Space"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:backgroundTint="#2196F3"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnClear"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Clear"
                    android:layout_marginStart="4dp"
                    android:backgroundTint="#F44336"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

