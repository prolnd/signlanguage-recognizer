<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/surface_variant" />
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="@color/primary_variant" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/surface_variant" />
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="@color/interactive_disabled" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/surface" />
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="@color/primary" />
        </shape>
    </item>
</selector>